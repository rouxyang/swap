function delete_message(url) {
    if (window.confirm('您确定要删除这条留言？')) {
        $.ajax({
            type: 'DELETE',
            url: url,
            dataType: 'json',
            success: function (msg) {
                if (msg === true) {
                    window.location.reload();
                } else {
                    window.alert(msg);
                }
            }
        });
    }
    return false;
}
$('#new_form').ajaxForm({
    dataType: 'json',
    success: function (response) {
        if (response['result']) {
            location.href = response['extra'];
        } else {
            for (var k in response['msg']) {
                $('#new_form_tips').html(response['msg'][k]);
            }
        }
    }
});
